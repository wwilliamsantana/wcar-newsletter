generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id          Int      @id @default(autoincrement())
  email       String   @unique // @unique impede e-mails duplicados
  isSubscribe Boolean  @default(true)
  createdAt   DateTime @default(now())
}
